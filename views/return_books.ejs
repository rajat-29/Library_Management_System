<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>Return Book</title>
    <link href="css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" >
    <link href="css/style.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>

<body class="body">
    <%- include('partials/topbar.ejs') %>
        <div class="content-wrapper">
            <div class="container">
                <div class="col-md-12">
                    <h4 class="header-line">Return Book</h4>
                </div>

            <div class="row">

                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                    <div class="alert alert-info" id="field_info" style="display : none">
                        <center id="display_book"></center>
                    </div>

                    <div class="panel panel-info">

                        <div class="panel-heading">
                            Return Book
                        </div>

                <div class="panel-body">

                    <div class="form-group">
                        <label>Student id <span style="color:red;">*</span></label>
                        <input class="form-control" type="number" id="studentid" placeholder="Enter Student Id" autocomplete="off"  
                        onchange="get_student_name()" required />
                    </div>

                <div class="form-group">
                    <span id="get_student_name" style="font-size:16px;"></span> 
                </div>


                <div class="form-group">
                    <label>ISBN Number <span style="color:red;">*</span></label>
                    <input class="form-control" type="number" id="bookid" placeholder="Enter ISBN Number" autocomplete="off"
                    onchange="get_book_name()" required />
                </div>

                 <div class="form-group">
                    <span id="get_book_name" style="font-size:16px;"></span> 
                </div>

                <button type="submit" name="issue" class="btn btn-info" onclick="returnBook()">Return Book</button>
           
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footbar.ejs') %>

<script type="text/javascript" src="js/book_return.js"></script>
<script src="js/bootstrap.js"></script> 

</body>
</html>